{
  "name": "mystic-divination-service",
  "version": "1.0.0",
  "description": "A mystic divination service with Vue.js frontend and Flask backend",
  "scripts": {
    "frontend:install": "cd frontend && npm install",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "backend:install": "pip install -r backend/requirements.txt",
    "backend:dev": "cd backend && python app.py",
    "install": "npm run frontend:install && npm run backend:install",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "build": "npm run frontend:build"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
